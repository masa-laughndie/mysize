<% provide(:title, @user.name + "(@" + @user.mysize_id + ")さん") %>

<div class="content-sspace">
  <div class="profile-top">
    <div class="c user_icon">
      <%= image_tag(image_url(@user), alt: @user.name) %>
      <!--<div class="icon1" style="background-image: url(<%= image_url(@user) %>);"></div>-->
    </div>
    <div class="user_stats">
      <a href="#">
        <div class="num">
          <strong id="user_size" class="stat">
            <% unless @user.shoe_size.nil? %>
              <%= 21.5 + @user.shoe_size / 2.0 %>
            <% else %>
              0
            <% end %>
          </strong>
        </div>
        cm
      </a>
      <a href="#">
        <div class="num">
          <strong id="shoes" class="stat">
            <%= @user.kicksposts.count %>
          </strong>
        </div>
        キックス
      </a>
      <a href="#">
        <div class="num">
          <strong id="good-answer" class="stat">
            0
          </strong>
        </div>
        グッドアンサー
      </a>
    </div>
  </div>
  <div class="profile-middle">
    <div class="user_text">
      <div class="user_name">
        <h1><%= @user.name %></h1>
      </div>
      <div class="user_mysizeid">
        <%= fa_icon("at") + @user.mysize_id %>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="set-profile">
        <%= link_to "プロフィール編集", profile_settings_path %>
      </div>
      <div class="set-option">
        <%= link_to fa_icon("cog"), option_settings_path %>
      </div>
    <% else %>
      <div class="set-follow">
        <%= link_to "フォローする", '#' %>
      </div>
    <% end %>
  </div>
  <div class="profile-bottom">
    <div class="user_profile">
      <% unless @user.profile_content.nil? %>
        <%= @user.profile_content %>
      <% else %>
        プロフィールが未記入です。
      <% end %>
    </div>
    <div class="follow-info">
      <a href="#">        <!--    <%= following_user_path(@user) %>-->
        <strong id="following">
          0
        </strong>
        フォロー
      </a>
      <a href="#">        <!--    <%= followers_user_path(@user) %>-->
        <strong id="followers">
          0
        </strong>
        フォロワー
      </a>
    </div>
  </div>
</div>
<div class="post">
  <div class="post-select">
    <div class="c post-list">
      <%= link_to fa_icon("th"), '#' %>
    </div>
    <div class="c post-list">
      <%= link_to fa_icon("list-ul"), '#' %>
    </div>
    <div class="c post-list">
      <%= link_to fa_icon("thumbs-up"), '#' %>
    </div>
  </div>
  <div class="post-main">
    <% unless @user.kicksposts.any? %>
      <div class="c no-post">
        <i class="fa fa-image" ></i>
        <div class=" no-text">表示できるデータがありません</div>
      </div>
    <% else %>
      <ul>
        <%= render @kicksposts %>
      </ul>
    <% end %>
  </div>
</div>