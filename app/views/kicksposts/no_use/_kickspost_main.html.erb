<div class="c index-left kpost-left">
  <%= render partial: 'shared/index_left',
             locals: { user: kickspost.user } %>
</div>
<div class="kpost-center">
  <div class="kpost-name">
    <%= link_to user_path(kickspost.user, display: "square") do %>
      <%= kickspost.user.name %>
      <span> @<%= kickspost.user.mysize_id %></span>
    <% end %>
  </div>
  <div class="kpost-content autolink key">
    <span class="post-text"><%= kickspost.content %></span>
  </div>
</div>
<div class="kpost-act clear">
  <div class="kpost-time">
    <%= time_ago_in_words(kickspost.created_at) %>Ââç
  </div>
  <div class="kpost-alist">
    <div class="kpost-aicon">
      <%= render partial: 'goods/good_form',
                 locals: { post: kickspost,
                           type: "Kickspost" } %>
    </div>
    <div class="kpost-num" id="good-num-kickspost-<%= kickspost.id %>">
      <%= kickspost.goods.to_a.size %>
    </div>
  </div>
  <div class="kpost-alist alist-last">
    <div class="kpost-aicon">
      <%= link_to fa_icon("comment"),
                  kickspost_path(kickspost.user.mysize_id, kickspost) %>
    </div>
    <div class="kpost-num">
      <%= kickspost.comments.to_a.size %>
    </div>
  </div>
</div>
<div class="kpost-right">
  <div class="c kpost-right-top">
    <div class="kpost-menu clear">
      <% if current_user == kickspost.user %>
        <%= render 'kicksposts/kickspost_menu', kickspost: kickspost %>
      <% end %>
    </div>
    <div class="kpost-picture abs-center">
      <%= link_to image_tag(picture_url(kickspost),
                            alt: kickspost.content,
                            class: "cover"),
                  kickspost_path(kickspost.user.mysize_id, kickspost)  %>
      <div class="kpost-size index-size">
        <%= kickspost.size %>
      </div>
    </div>
  </div>
</div>