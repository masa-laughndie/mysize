<header>
  <div class="wrapper container">
    <div class="header header-left">
      <% if logged_in? %>
        <% if content_for?(:left_header) %>
          <%= yield(:left_header) %>
        <% else %>
          <%= link_to image_tag(image_url(current_user),
                      size: 40,
                      alt: current_user.mysize_id,
                      id: "my-icon"),
                      user_path(current_user, display: "square"),
                      class: "left-header" %>
        <% end %>
      <% else %>
        <% if content_for?(:left_header) %>
          <%= yield(:left_header) %>
        <% else %>
          <%= link_to fa_icon("sign-in"), login_path, class: "left-header" %>
        <% end %>
      <% end %>
    </div>
    <div class="header header-center">
      <% if content_for?(:center_header) %>
        <%= yield(:center_header) %>
      <% else %>
        <a class="logo-text" href="<%= root_path %>">
          <%= image_tag("/images/apps_icon1.png", size: 24) %>
          <span class="logo-font">Mysize</span>
        </a>
      <% end %>
    </div>
    <div class="header header-right alist">
      <% if content_for?(:right_header) %>
        <%= yield(:right_header) %>
      <% elsif logged_in? %>
        <%= link_to fa_icon("plus-square"), upload_path, class: "right-header" %>
      <% else %>
        <a class="right-header jump" data-scroll="-50" href="<%= about_path(about: 'on1') %>#about-can3">
          <%= fa_icon("plus-square") %>
        </a>
      <% end %>
    </div>
  </div>
</header>