<% if logged_in? %>
  <div id="good-form-<%= type.downcase %>-<%= post.id %>" class="good-form">
  <% if current_user.good?(type, post) %>
    <%= render partial: 'goods/ungood_button',
               locals: { post: post,
                         type: type } %>
  <% else %>
    <%= render partial: 'goods/good_button',
               locals: { post: post,
                         type: type } %>
  <% end %>
  </div>
<% else %>
  <div class="good-form">
    <div class="c form-good">
      <%= link_to fa_icon("thumbs-o-up"), '#', class: 'ban' %>
    </div>
  </div>
<% end %>