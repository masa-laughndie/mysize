<div class="npost-main clear">
  <% if nkind == "gpost_list" %>
    <div class="c index-left kpost-left">
      <div class="npost-picture">
        <div class="abs-center">
          <%= link_to image_tag(picture_url(post),
                                alt: content,
                                size: 50),
                      kickspost_path(post.user.mysize_id, post) %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="kpost-center notice-comment-text autolink">
    <div class="kpost-content autolink">
      <%= post.content %>
    </div>
  </div>
</div>