<div id="post-nav-<%= type.underscore %>-<%= post.id %>" class="post-nav">
  <%= fa_icon("angle-down") %>
</div>
<ul id="nav-list-<%= type.underscore %>-<%= post.id %>" class="nav-list">
  <li>
    <%= render partial: 'shared/post_delete',
               locals: { post: post,
                         type: type } %>
  </li>
  <% if type == "Kickspost" %>
  <li class="bar"></li>
  <li>
    <%= link_to fa_icon("pencil-square-o") + " 投稿を編集する",
                edit_kickspost_path(post.user.mysize_id, post) %>
  </li>
  <li class="bar"></li>
  <li>
    <%= link_to fa_icon("twitter") + " Twitterでシェア",
                "https://twitter.com/intent/tweet?text=" +
                ERB::Util.url_encode(post.user.name + "さんの投稿｜" +
                                     post.title + "\n") +
                "&url=" + kickspost_url(post.user, post),
                class: "kpost-alink",
                onclick: "window.open(encodeURI(decodeURI(this.href)), 'tweetwindow', 'width=650, height=470, personalbar=0, toolbar=0, scrollbars=1, sizable=1'); return false;" %>
  </li>
  <% end %>
</ul>