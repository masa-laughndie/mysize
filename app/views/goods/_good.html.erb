<li id="good-list-<%= good.id %>" class="good-list kpost-main link-list">
  <% if good.kind == "comment" %>
    <% comment = Comment.find_by(id: good.kind_id) %>
    <a class="content-link" href="<%= kickspost_url(comment.kickspost.user.mysize_id, comment.kickspost, display: 'text') %>"></a>
  <% elsif good.kind == "post" %>
    <% kickspost = Kickspost.find_by(id: good.kind_id) %>
    <a class="content-link" href="<%= kickspost_url(kickspost.user.mysize_id, kickspost, display: 'text') %>"></a>
  <% end %>
  <div class="content-abs">
    <div class="content-height">
      <div class="list-content clear">
        <% if good.kind == "comment" %>
          <%= render partial: 'comments/comment_main',
                     locals: { comment: comment,
                               good: good } %>
        <% elsif good.kind == "post" %>
          <%= render partial: 'kicksposts/kickspost_main',
                     locals: { kickspost: kickspost,
                               good: good } %>
        <% else %>
          <span>other</span>
        <% end %>
      </div>
    </div>
  </div>
</li>