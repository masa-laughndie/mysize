<% provide(:title, "プロフィール編集") %>

<div class="content">
  <div class="page-title">
    <h1 class="title-text">プロフィール編集</h1>
  </div>
  <div class="set-form">
    <%= form_for(@user, url: profile_settings_path, multipart: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="label-form">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, placeholder: "ユーザー名" %>
      </div>
      <div class="label-form">
        <%= f.label :shoe_size, "スニーカーのベースサイズ" %>
        <%= f.select(:shoe_size, options_for_select(size_array, @user.shoe_size), prompt: "選択してください") %>
      </div>
      <div class="label-form">
        <%= f.label :image, "アイコン" %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
      <div class="label-form">
        <%= f.label :profile_content, "プロフィール" %>
        <%= f.text_area :profile_content, placeholder: "具体的なスニーカーのサイズ例や簡単な自己紹介などを記入しましょう(160文字以内)
(例)Jordan1(27cm)/StanSmith(26.5cm)/...|(どういったスニーカーが好きかなど...)" %>
      </div>
      <div class="c button button-mini accent">
        <%= f.submit "更新", data: { disable_with: "処理中..."} %>
      </div>
      <script type="text/javascript">
        $('#user_image').bind('change', function() {
          var size_in_megabytes = this.file[0].size/1024/1024;
          if (size_in_megabytes > 10) {
            alert('ファイルは最大10MBまでとなります。');
          }
        });
      </script>
    <% end %>
  </div>
</div>