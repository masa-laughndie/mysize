<% provide(:title, @user.name + "(@" + @user.mysize_id + ")さん") %>

<div class="content-mspace">
  <div class="profile-top">
    <div class="user_icon">
      <%= image_tag(image_url(@user), alt: @user.name) %>
    </div>
    <div class="user_stats">
      <a href="#">
        <div class="num">
          <strong id="user_size" class="stat">
            <% unless @user.shoe_size.nil? %>
              <%= @user.shoe_size %>
            <% else %>
              0
            <% end %>
          </strong>
        </div>
        cm
      </a>
      <a href="#">
        <div class="num">
          <strong id="shoes" class="stat">
            <%= @user.kicksposts.count %>
          </strong>
        </div>
        キックス
      </a>
      <a href="#">
        <div class="num">
          <strong id="good-answer" class="stat">
            0
          </strong>
        </div>
        グッドアンサー
      </a>
    </div>
  </div>
  <div class="profile-middle clear">
    <div class="user-text">
      <div class="user-name">
        <h1><%= @user.name %></h1>
      </div>
      <div class="user-mysizeid">
        <%= fa_icon("at") + @user.mysize_id %>
      </div>
    </div>
    <% if current_user?(@user) %>
      <div class="set-profile">
        <%= link_to "プロフィール編集", profile_settings_path %>
      </div>
      <div class="set-option">
        <%= link_to fa_icon("cog"), option_settings_path %>
      </div>
    <% else %>
      <div class="c set-follow">
        <%= render partial: 'follow_form', locals: { user: @user } if logged_in? %>
      </div>
    <% end %>
  </div>
  <div class="profile-bottom">
    <div class="user-profile">
      <% unless @user.profile_content.blank? %>
        <%= @user.profile_content %>
      <% else %>
        プロフィールが未記入です。
      <% end %>
    </div>
    <div class="follow-info">
      <a href="<%= following_user_path(@user) %>">
        <strong id="following">
          <%= @user.following.count %>
        </strong>
        フォロー
      </a>
      <a href="<%= followers_user_path(@user) %>">
        <strong id="followers">
          <%= @user.followers.count %>
        </strong>
        フォロワー
      </a>
    </div>
  </div>
</div>
<div class="post">
  <div class="post-select">
    <div class="c post-list">
      <%= link_to fa_icon("th"), user_path(@user, display: "square") %>
    </div>
    <div class="c post-list">
      <%= link_to fa_icon("list-ul"), user_path(@user) %>
    </div>
    <div class="c post-list">
      <%= link_to fa_icon("thumbs-up"), '#' %>
    </div>
  </div>
  <div class="post-main">
    <% if @user.kicksposts.blank? %>
      <%= render partial: 'shared/no_data',
                 locals: { user: @user,
                           target: "post" } %>
    <% else %>
      <div class="post-line clear">
        <ul>
          <%= render @kicksposts, comment_disnum: "few" %>
        </ul>
      </div>
    <% end %>
  </div>
</div>