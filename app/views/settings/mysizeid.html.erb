<% provide(:title, "MysizeID編集") %>
<% provide(:og_title, "MysizeID編集") %>
<% provide(:og_url, mysizeid_settings_url) %>
<%= render 'layouts/back', back_path: "#{account_settings_path}" %>
<%= render 'layouts/center_header', header_text: "MysizeID編集" %>

<div class="container content-space">
  <div class="form">
    <%= form_for(current_user, url: mysizeid_settings_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="c base-form">
        <%= f.text_field :mysize_id, placeholder: "MysizeID (a-z,0-9,_ 15文字以内)" %>
      </div>
      <div class="c button button-mini accent">
        <%= f.submit "保存", data: { disable_with: "処理中..."} %>
      </div>
    <% end %>
  </div>
</div>