<% provide(:title, "検索") %>

<div class="content-sspace">
  <%= render 'shared/search_form' %>
</div>
<% unless params[:keyword].nil? %>
  <div class="content-nspace">
    <div class="c search-select">
      <div class="search-list">
        <%= link_to "ユーザー", search_path(keyword: params[:keyword]) %>
      </div>
      <div class="search-list">
        <%= link_to "投稿", search_path(keyword: params[:keyword], for: 'post') %>
      </div>
    </div>
    <div class="search-result">
      <% if params[:for] == 'post' %>
        <% if @kicksposts.blank? %>
          <%= render partial: 'shared/no_data',
                     locals: { user: current_user,
                               target: nil } %>
        <% else %>
          <div class="post-main">
            <div class="post-line clear">
              <ul>
                <%= render @kicksposts, comment_disnum: "few" %>
              </ul>
            </div>
          </div>
        <% end %>
      <% else %>
        <% if @users.blank? %>
          <%= render partial: 'shared/no_data',
                     locals: { user: current_user,
                               target: nil } %>
        <% else %>
          <div class="setting-select">
            <ul>
              <%= render @users %>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
